#!/usr/bin/env bash

function main() {
    local green="\033[38;2;100;255;10m"
    local nc="\033[0m"
    local padding=20
    local alignment=5

    printf "%-${padding}s" ""; for i in {1..82}; do printf "$"; done; printf "\n"

    printf "%-${padding}s$%-${alignment}b${green}%b${nc}%-${alignment}b$\n" \
    "" "" "                                                                      " "" \
    "" "" "                                                                      " "" \
    "" "" "                                                                      " "" \
    "" "" "**********************************************************************" "" \
    "" "" "**********************************************************************" "" \
    "" "" "**********************************************************************" "" \
    "" "" "****ooooooo******************************************oooooooo*********" "" \
    "" "" "*********oooooo*********************************oooooooo**************" "" \
    "" "" "**************oooooo**************************ooooo*******************" "" \
    "" "" "**********************************************************************" "" \
    "" "" "******00000000000000**************************000000000000000*********" "" \
    "" "" "******00000000000000**************************000000000000000*********" "" \
    "" "" "******00000000000000**************************000000000000000*********" "" \
    "" "" "******************************%%%%%***********************************" "" \
    "" "" "******************************%%%%%***********************************" "" \
    "" "" "******************************%%%%%***********************************" "" \
    "" "" "******************************%%%%%***********************************" "" \
    "" "" "******************************%%%%%***********************************" "" \
    "" "" "**********************************************************************" "" \
    "" "" "**********************************************************************" "" \
    "" "" "***********************000000000000000000000000***********************" "" \
    "" "" "***********************000000000000000000000000***********************" "" \
    "" "" "***********************000000000000000000000000***********************" "" \
    "" "" "*********************##************************##*********************" "" \
    "" "" "*********************##************************##*********************" "" \
    "" "" "*********************##************************##*********************" "" \
    "" "" "#######################************************#######################" "" \
    "" "" "#######################************************#######################" "" \
    "" "" "**********************************************************************" "" \
    "" "" "**********************************************************************" "" \
    "" "" "**********************************************************************" "" \
    "" "" "                                                                      " "" \
    "" "" "                                                                      " "" \
    "" "" "                                                                      " ""

    printf "%-${padding}s" ""; for i in {1..82}; do printf "$" ""; done; printf "\n"
}

main
